
#!/bin/bash
#PBS -P ph60
#PBS -q normalsr
#PBS -l walltime=00:05:00
#PBS -j oe
#PBS -N w12opt

module purge
module load nwchem/7.0.0
export OMP_NUM_THREADS=1
cd "$PBS_O_WORKDIR"

# Correctly count nodes
NP=${PBS_NP:-${NCPUS:-104}}
NODES=${PBS_NNODES:-$(( (NP + 103) / 104 ))}

OUT="$HOME/nwchem_opt.w12.n${NODES}.${PBS_JOBID}.stdout"

time mpirun -np ${NP} nwchem $HOME/w12_b3lyp_cc-pvtz_energy.nw 2>&1 | tee $OUT

